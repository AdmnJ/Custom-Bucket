{
    "version": "2.0.0",
    "description": "A Go library & cli for the undocumented crunchyroll api. To use it, you need a crunchyroll premium account to for full (api) access.",
    "homepage": "https://github.com/ByteDream/crunchyroll-go",
    "checkver": {
        "url": "https://github.com/ByteDream/crunchyroll-go/releases/latest",
        "regex": "v(?<version>[\\d\\w.]+)/crunchy-v(?<short>[\\d.]+).*\\.exe"
        },

    "license": "LGPL-3.0 License",
    "suggest": {
        "ffmpeg": "ffmpeg",
        "vcredist": "extras/vcredist2010",
        "go": "go"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/ByteDream/crunchyroll-go/releases/download/v2.0.0/crunchy-v2.0.0_windows.exe"
        }
    },
    "bin": [
        "crunchy-v2.0.0_windows.exe",
        [
            "crunchy-v2.0.0_windows.exe",
            "crunchy"
        ],
        [
            "crunchy-v2.0.0_windows.exe",
            "crunchyroll-go"
        ]
    ],
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/ByteDream/crunchyroll-go/releases/download/$Version/crunchy-$Version_windows.exe"
            }
        },
        "bin": [
            "crunchy-v$Version_windows.exe",
            [
                "crunchy-v$Version_windows.exe",
                "crunchy"
            ],
            [
                "crunchy-v$Version_windows.exe",
                "crunchyroll-go"
            ]
        ]
    }
}
